{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile and Assemble",
      "type": "shell",
      // need quotes around '-Dmaven.test.skip=true' on Windows PowerShell due to
      // https://stackoverflow.com/a/6351739
      "command": "mvn '-Dmaven.test.skip=true' compile && mvn jar:jar appassembler:assemble antrun:run@patch-bin-scripts",
      "group": "build",
      "problemMatcher": "$gcc",
      "presentation": {
        "reveal": "silent",
        "clear": true,
      },
    },
    {
      "label": "Check",
      "type": "shell",
      "command": "mvn antrun:run@ktlint detekt:check",
      "group": "build",
      "problemMatcher": {
        "owner": "ktlint",
        "source": "ktlint",
        "severity": "warning",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^.*\\[ktlint\\] (.*?):([0-9]+):([0-9]+): (.*?) \\((.*?)\\)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4,
          "code": 5,
        },
      },
      "presentation": {
        "reveal": "silent",
        "clear": true,
      },
    },
    {
      "label": "Clean and Run Tests",
      "type": "shell",
      "command": "mvn clean && mvn verify",
      "group": {
        "kind": "test",
        "isDefault": true,
      },
      "problemMatcher": "$gcc",
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "mvn verify",
      "group": {
        "kind": "test",
        "isDefault": true,
      },
      "problemMatcher": "$gcc",
    },
    {
      "label": "Update Dependencies",
      "type": "shell",
      "command": "mvn versions:use-latest-releases",
      "group": {
        "kind": "test",
      },
      "problemMatcher": "$gcc",
    },
  ],
}
