{
	"$schema": "https://biomejs.dev/schemas/1.5.2/schema.json",
	"extends": ["./node_modules/@repobuddy/biome/recommended.json"],
	"files": {
		"ignore": ["cjs", "coverage", "esm", "target"],
		"include": ["ts/**/*", "**/*.json"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	}
}
